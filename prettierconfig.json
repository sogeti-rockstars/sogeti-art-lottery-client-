{
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 160,
    "overrides": [
        {
            "files": "prettierrc.json",
            "options": {
                "parser": "json"
            }
        },
        {
            "files": [
                "*.json"
            ],
            "options": {
                "printWidth": 80
            }
        },
        {
            "files": [
                "*.js",
                "*.ts",
                "*.jsx",
                "*.tsx",
                "*.html"
            ],
            "options": {
                "parser": "typescript",
                "tabWidth": 4,
                "trailingComma": "es5",
                "bracketSpacing": true,
                "useTabs":false
            }
        }
    ]
}